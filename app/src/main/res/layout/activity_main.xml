<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/appBackground" tools:layout_editor_absoluteY="25dp"
        android:id="@+id/time_Value">

    <TextView
            android:text="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tempertureValue"
            android:textColor="@android:color/background_light" android:textSize="150sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.504"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/degree"
            android:id="@+id/degree_imageView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="@+id/tempertureValue" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/tempertureValue"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="At 5:00 PM it will be"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/textView3" android:textColor="@color/Half_WHite"
            android:textSize="18dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/tempertureValue"/>
    <TextView
            android:text="Alcatraz Island, CA"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:id="@+id/locationValue"
            android:textColor="@android:color/white" android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.596"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/cloudy_night"
            android:id="@+id/iconImageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toBottomOf="@+id/locationValue"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.66"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.34"/>
    <TextView
            android:text="Humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/humidityLabel"
            android:textColor="@color/Half_WHite"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tempertureValue"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline2" app:layout_constraintHorizontal_bias="0.387"
            android:paddingTop="15dp"/>
    <TextView
            android:text="0.88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/humidityValue"
            android:textColor="@color/Half_WHite" android:textSize="24sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/humidityLabel"
            app:layout_constraintStart_toStartOf="@+id/humidityLabel" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/humidityLabel" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="70%"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/percipValue"
            android:textColor="@color/Half_WHite" android:textSize="24sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/precplabel" app:layout_constraintEnd_toEndOf="@+id/precplabel"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/precplabel"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.47"/>
    <TextView
            android:text="RAIN/SNOW"
            android:layout_width="77dp"
            android:layout_height="36dp"
            android:id="@+id/precplabel" android:textColor="@color/Half_WHite"
            app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.454" android:paddingTop="15dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tempertureValue"/>
    <TextView
            android:text="Stormy with a chance of meat Balls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/summaryValue" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/percipValue"
            android:textColor="@android:color/white" android:textSize="18dp"/>


</android.support.constraint.ConstraintLayout>